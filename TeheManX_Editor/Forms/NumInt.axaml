<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="TeheManX_Editor.Forms.NumInt"
    x:Name="root">

    <UserControl.Styles>

        <!-- Style for RepeatButtons like spinner buttons -->
        <Style Selector="RepeatButton.button-spinner-style">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Style for Mouse Hover -->
        <Style Selector="RepeatButton.button-spinner-style:pointerover">
            <Setter Property="Background" Value="#33007ACC"/>
            <Setter Property="BorderBrush" Value="#66007ACC"/>
        </Style>

        <!-- Style for Rpeat Button Disable -->
        <Style Selector="RepeatButton.button-spinner-style:disabled">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
            <Setter Property="Foreground" Value="#FF808080"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

    </UserControl.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
			<ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
			<RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="InputBox"
                 Grid.RowSpan="2"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                 Focusable="True"
                 MinWidth="10"
                 Padding="2,1"
                 BorderThickness="1,1,0,1"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Center"
                 CornerRadius="0"
                 Text="{Binding RawText, ElementName=root, Mode=TwoWay}"
                 FontSize="{Binding FontSize, ElementName=root}"
                 FontFamily="{Binding FontFamily, ElementName=root}"/>

        <RepeatButton x:Name="increaseBtn" Grid.Column="1" Focusable="False"
                      Classes="button-spinner-style"
                      Click="IncreaseButton_Click">
            <PathIcon Data="{StaticResource ButtonSpinnerIncreaseButtonIcon}"/>
        </RepeatButton>

        <RepeatButton x:Name="decreaseBtn" Grid.Column="1" Focusable="False"
                      Grid.Row="1"
                      Classes="button-spinner-style"
                      Click="DecreaseButton_Click">
            <PathIcon Data="{StaticResource ButtonSpinnerDecreaseButtonIcon}"/>
        </RepeatButton>

    </Grid>
</UserControl>
