<Window x:Class="TeheManX_Editor.Forms.GameSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeheManX_Editor.Forms"
        mc:Ignorable="d"
        Title="Game Settings" Height="370" Width="365" MaxWidth="365" MinWidth="360" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="Expander">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Background" Value="#222222"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style TargetType="local:NumInt">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="AllowTextInput" Value="True"/>
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="ParsingNumberStyle" Value="HexNumber"/>
                <Setter Property="FormatString" Value="X"/>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <Expander>
                <Expander.Header>
                    <TextBlock>Capsule Settings</TextBlock>
                </Expander.Header>
                <StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <local:NumInt x:Name="hadoukenStageInt" ValueChanged="hadoukenStageInt_ValueChanged" Width="90"  Minimum="0" Maximum="#FF" Value="0" ></local:NumInt>
                        <Label x:Name="hadoukenStageLbl" Foreground="White">Hadouken Stage</Label>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal" x:Name="hadoukenVistPannel">
                        <local:NumInt x:Name="revistInt" ValueChanged="revistInt_ValueChanged" Width="90"  Minimum="0" Maximum="#FF" Value="0" ></local:NumInt>
                        <Label Foreground="White">Hadouken Revist Count</Label>
                    </StackPanel>
                    <Label Foreground="White" FontSize="22" HorizontalAlignment="Center">Capsule Stage Settings</Label>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <local:NumInt x:Name="stageInt" ValueChanged="stageInt_ValueChanged" Width="90"  FontSize="27" Minimum="0" Value="0"></local:NumInt>
                        <Label Foreground="White" FontSize="21">Selected Stage</Label>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <Label Foreground="White" Width="75">Position X</Label>
                        <local:NumInt x:Name="positionIntX" ValueChanged="positionIntX_ValueChanged" Width="90"  Minimum="0" Maximum="#FFFF" Value="0"></local:NumInt>
                        <Label Foreground="White" Width="75">Position Y</Label>
                        <local:NumInt x:Name="positionIntY" ValueChanged="positionIntY_ValueChanged" Width="90"  Minimum="0" Maximum="#FFFF" Value="0"></local:NumInt>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <Label Foreground="White" Width="75">Camera X</Label>
                        <local:NumInt x:Name="cameraIntX" ValueChanged="cameraIntX_ValueChanged" Width="90" Minimum="0" Maximum="#FFFF" Value="0"></local:NumInt>
                        <Label Foreground="White" Width="75">Camera Y</Label>
                        <local:NumInt x:Name="cameraIntY" ValueChanged="cameraIntY_ValueChanged" Width="90" Minimum="0" Maximum="#FFFF" Value="0"></local:NumInt>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <local:NumInt x:Name="armorIndexInt" ValueChanged="armorIndexInt_ValueChanged" Width="90" Minimum="0" Value="0"></local:NumInt>
                        <Label Foreground="White">Armor Index</Label>
                        <Button x:Name="helpBtn" Click="helpBtn_Click" Padding="0" Width="20" Height="25">?</Button>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <local:NumInt x:Name="textBoxIdInt" ValueChanged="textBoxIdInt_ValueChanged" Width="90" Minimum="0" Value="0"></local:NumInt>
                        <Label Foreground="White">Text Box Id</Label>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal">
                        <local:NumInt x:Name="movementIndexInt" ValueChanged="movementIndexInt_ValueChanged" Width="90" Minimum="0" Value="0"></local:NumInt>
                        <Label Foreground="White">Upgrade Movement Index</Label>
                    </StackPanel>
                    <!--Unkown X3 Property-->
                    <StackPanel Background="#111111" Orientation="Horizontal" x:Name="unkownPannel">
                        <local:NumInt x:Name="unkownInt" ValueChanged="unkownInt_ValueChanged" Width="90" Minimum="0" Value="0"></local:NumInt>
                        <Label Foreground="White">???</Label>
                    </StackPanel>
                    <StackPanel Background="#111111" Orientation="Horizontal" x:Name="fixPannelX2">
                        <Label Foreground="White">Apply MegaMan X2 Camera Fix</Label>
                        <Button x:Name="applyFixBtn" Click="applyFixBtn_Click" Padding="0">Yes</Button>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </ScrollViewer>
        <Canvas Grid.Row="1">
            <Button Canvas.Top="25" Canvas.Left="260"  Width="70" Height="30" Click="SaveBtn_Click">Save</Button>
        </Canvas>
    </Grid>
</Window>
