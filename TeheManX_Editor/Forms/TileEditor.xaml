<UserControl x:Class="TeheManX_Editor.Forms.TileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>

        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock FontSize="18" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Center">Background</TextBlock>
            <Border BorderBrush="White" BorderThickness="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="24" Foreground="White" FontFamily="Consolas">Tile Set:</TextBlock>
                        <local:NumInt x:Name="tileSetInt" FontSize="24" Minimum="0" Maximum="#FF"></local:NumInt>
                    </StackPanel>
                    <CheckBox x:Name="freshCheck" FontSize="18" Foreground="White" FontFamily="Consolas">Fresh Redraw</CheckBox>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="18" Foreground="White" FontFamily="Consolas">Redraw Level:</TextBlock>
                        <Button Click="RedrawBtn_Click" Width="25" Height="25" Padding="0" Margin="8,1,0,0" VerticalContentAlignment="Top" VerticalAlignment="Top">🔄</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
