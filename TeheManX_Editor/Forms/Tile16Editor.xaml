<UserControl x:Class="TeheManX_Editor.Forms.Tile16Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="1170" d:DesignWidth="872">
    <Grid Background="#101010">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!--16x16 Tiles-->
        <Grid x:Name="x16grid" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image x:Name="x16Image" x:FieldModifier="public" Grid.RowSpan="16" Grid.ColumnSpan="16" MouseDown="x16Image_MouseDown"/>
            <Rectangle x:Name="tile16Cursor"   IsHitTestVisible="False" StrokeThickness="2.5" StrokeDashArray="2 2"  Stroke="#AFFF0000"></Rectangle>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Label Foreground="White" FontSize="18" FontFamily="Consolas" Padding="3,5,1,5">Palette</Label>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">0</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">1</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">2</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">3</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">4</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">5</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">6</Button>
                <Button Style="{StaticResource TileButton}" Click="Clut_Click">7</Button>
            </StackPanel>

            <!--GPU Tiles-->
            <Border Grid.Row="1" BorderBrush="White" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0">
                <ScrollViewer>
                    <Grid x:Name="vramGrid">
                        <Image x:Name="vramTileImage" Width="256" MouseUp="vramTileImage_MouseUp" Grid.ColumnSpan="16" Grid.RowSpan="64"/>
                        <Rectangle x:Name="tile8Cursor"   IsHitTestVisible="False" StrokeThickness="2.5" StrokeDashArray="2 2"  Stroke="#AFFF0000"></Rectangle>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Label Foreground="White" FontSize="18" FontFamily="Consolas" Padding="3,5,1,5">x16-Tiles</Label>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">0</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">1</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">2</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">3</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">4</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">5</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">6</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">7</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">8</Button>
                <Button Style="{StaticResource TileButton}" Click="Page_Click">9</Button>
            </StackPanel>
            
            <!--Tile Image for Selected 16x16 Tile & Grid Buttons-->
            <WrapPanel Orientation="Horizontal">
                <Border Grid.ColumnSpan="2" Grid.RowSpan="2" BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Margin="3,1,1,2" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="32"/>
                        </Grid.RowDefinitions>
                        <Image Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="tileImageS" Width="64" MouseUp="tileImageS_MouseUp"/>
                        <Rectangle x:Name="innerCursor" Width="32" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top"  IsHitTestVisible="False" StrokeThickness="2.5" StrokeDashArray="2 2"  Stroke="#AFFF0000"></Rectangle>
                    </Grid>
                </Border>
                <Button Margin="5" Width="125" Height="45" Click="x16GridBtn_Click">Show 16X Grid</Button>
                <Button Margin="5" Width="115" Height="45" Click="x8GridBtn_Click">Show 8X Grid</Button>
            </WrapPanel>
        </StackPanel>

        <!--Tile Parameters-->
        <WrapPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" FontFamily="Consolas" Padding="3">TILE:</Label>
                <local:NumInt x:Name="tileInt" Width="70" FontSize="18" Value="0" Minimum="0" ValueChanged="tileInt_ValueChanged"></local:NumInt>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" FontFamily="Consolas" Padding="3">Vram:</Label>
                <local:NumInt x:Name="vramInt" Width="70" FontSize="18" Value="0" Minimum="0" Maximum="#1FF" ValueChanged="vramInt_ValueChanged"></local:NumInt>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" FontFamily="Consolas" Padding="3">Pal:</Label>
                <local:NumInt x:Name="palInt" Width="40" FontSize="18" Value="0" Minimum="0" Maximum="7" ValueChanged="palInt_ValueChanged"></local:NumInt>
            </StackPanel>

            <CheckBox x:Name="priorityCheck" Foreground="White" FontSize="18" FontFamily="Consolas" VerticalAlignment="Center" Margin="8,5" Checked="priorityCheck_CheckChange" Unchecked="priorityCheck_CheckChange">Priority</CheckBox>

            <CheckBox x:Name="flipHCheck" Foreground="White" FontSize="18" FontFamily="Consolas" VerticalAlignment="Center" Margin="8,5" Checked="flipHCheck_CheckChange" Unchecked="flipHCheck_CheckChange">Flip-H</CheckBox>
            
            <CheckBox x:Name="flipVCheck" Foreground="White" FontSize="18" FontFamily="Consolas" VerticalAlignment="Center" Margin="8,5" Checked="flipVCheck_CheckChange" Unchecked="flipVCheck_CheckChange">Flip-V</CheckBox>
        </WrapPanel>
    </Grid>
</UserControl>
