<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeheManX_Editor.Forms"
        x:DataType="local:MessageBoxWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TeheManX_Editor.Forms.MessageBoxWindow"
        Loaded="Window_Loaded"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        MinWidth="280"
        Title="{Binding Title}">
  <StackPanel Margin="10" Spacing="10">
    
    <!-- Message -->
    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14" HorizontalAlignment="Center"/>
    
    <!-- Buttons -->
    <UniformGrid Rows="1" HorizontalAlignment="Center" Margin="0,10,0,0">
        <Button x:Name="okButton" Focusable="True" HorizontalContentAlignment="Center" Content="OK" Width="80" IsVisible="{Binding ShowOk}" Click="Ok_Click"/>
        <Button x:Name="cancelButton" Focusable="True" HorizontalContentAlignment="Center" Content="Cancel" Width="80" IsVisible="{Binding ShowCancel}" Click="Cancel_Click"/>
        <Button x:Name="yesButton" Focusable="True" HorizontalContentAlignment="Center" Content="Yes" Width="80" IsVisible="{Binding ShowYes}" Click="Yes_Click"/>
        <Button x:Name="noButton" Focusable="True" HorizontalContentAlignment="Center" Content="No" Width="80" IsVisible="{Binding ShowNo}" Click="No_Click"/>
    </UniformGrid>

    
  </StackPanel>
</Window>
