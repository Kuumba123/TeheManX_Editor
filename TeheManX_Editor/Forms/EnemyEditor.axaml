<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             x:Class="TeheManX_Editor.Forms.EnemyEditor">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
            <ColumnDefinition Width="375"/>
        </Grid.ColumnDefinitions>

        <!--Layout Viewer-->
		<local:SkiaControl x:Name="layoutCanvas" MaxWidth="8192" MaxHeight="8192" MeasureEvent="layoutCanvas_MeasureEvent" RenderEvent="layoutCanvas_RenderEvent" PointerPressed="layoutCanvas_PointerPressed" PointerMoved="layoutCanvas_PointerMoved" PointerReleased="layoutCanvas_PointerReleased" PointerExited="layoutCanvas_PointerExited" PointerWheelChanged="layoutCanvas_PointerWheelChanged"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!--Enemy List-->
            <ScrollViewer x:Name="enemyScroll" Grid.Row="1" AllowAutoHide="False">
				<local:SkiaControl x:Name="enemyListCanvas" PointerPressed="enemyListCanvas_PointerPressed" MeasureEvent="enemyListCanvas_MeasureEvent" RenderEvent="enemyListCanvas_RenderEvent"/>
            </ScrollViewer>

            <!--Enemy Info-->
            <Grid Grid.Column="1" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <!--ID-->
                        <TextBlock Width="70" FontSize="18" VerticalAlignment="Center"  FontFamily="Consolas">ID:</TextBlock>
                        <local:NumInt x:Name="idInt" Width="60" Height="32" Padding="0" FontSize="22" Value="0" Maximum="255" Minimum="0" ValueChanged="idInt_ValueChanged" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Var-->
                        <TextBlock Width="70" FontSize="18" VerticalAlignment="Center"  FontFamily="Consolas">Sub ID:</TextBlock>
                        <local:NumInt x:Name="subIdInt" Width="60" Height="32" Padding="0"   FontSize="22" Value="0" Maximum="255" Minimum="0" IsEnabled="False" ValueChanged="subIdInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Type-->
                        <TextBlock Width="70" FontSize="18" VerticalAlignment="Center"  FontFamily="Consolas">Type:</TextBlock>
                        <local:NumInt x:Name="typeInt" Width="60" Height="32" Padding="0"  FontSize="22" Value="0" Maximum="5" Minimum="0" IsEnabled="False" ValueChanged="typeInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Column-->
                        <TextBlock Width="70" FontSize="18" VerticalAlignment="Center"  FontFamily="Consolas">Column:</TextBlock>
                        <local:NumInt x:Name="columnInt" Width="60" Height="32" Padding="0"  FontSize="22" Value="0" Maximum="255" Minimum="0" IsEnabled="False" ValueChanged="colInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <!--X-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="35"  FontFamily="Consolas" Padding="3,3,0,3">X:</TextBlock>
                        <local:NumInt x:Name="xInt"  Width="105" Height="40" FontSize="35" Value="0" Maximum="8191" Minimum="0" IsEnabled="False" ValueChanged="xInt_ValueChanged"/>
                        <Button x:Name="zoomInBtn" Click="zoomInBtn_Click" Margin="15,0,0,0" Padding="0" Width="25" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False">+</Button>
                    </StackPanel>
                    <!--Y-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="35"  FontFamily="Consolas" Padding="3,3,0,3">Y:</TextBlock>
                        <local:NumInt x:Name="yInt"  Width="105" Height="40" FontSize="35" Value="0" Maximum="8191" Minimum="0" IsEnabled="False" ValueChanged="yInt_ValueChanged"/>
                        <Button x:Name="zoomOutBtn" Click="zoomOutBtn_Click" Margin="15,0,0,0" Padding="0" Width="25" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Focusable="False">-</Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2">
                    <Button Margin="5,30,5,5" Width="70" Height="35" Click="AddEnemy_Click">Add</Button>
                    <Button Margin="5,30,5,5" Width="80" Height="35" Click="RemoveEnemy_Click">Remove</Button>
                    <Button Margin="5,30,5,5" Width="70" Height="35" Click="ToolsBtn_Click" HorizontalAlignment="Left">Tools</Button>
                    <Button Margin="5,30,5,5" Width="30" Height="30" Padding="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Help_Click">?</Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
