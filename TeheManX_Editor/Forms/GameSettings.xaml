<Window x:Class="TeheManX_Editor.Forms.GameSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeheManX_Editor.Forms"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Game Settings" Height="300" Width="360" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="Expander">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Background" Value="#222222"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="mainPannel" Background="Black">
                <Border BorderThickness="2" BorderBrush="White">
                    <Button Click="SaveBtn_Click">Save Parameters</Button>
                </Border>
                <Expander>
                    <Expander.Header>
                        <TextBlock>MegaMan X Settings</TextBlock>
                    </Expander.Header>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
