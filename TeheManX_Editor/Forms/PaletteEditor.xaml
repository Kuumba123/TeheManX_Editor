<UserControl x:Class="TeheManX_Editor.Forms.PaletteEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#101010">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--VRAM Tiles-->
        <ScrollViewer>
            <Image x:Name="vramTileImage" Width="256"/>
        </ScrollViewer>
        
        <!--Palette-->
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="palTxt" Foreground="White" FontFamily="Consolas" FontSize="20" Margin="5,0,0,0" Width="115" VerticalAlignment="Center">Palette: 0</TextBlock>
                <Button Style="{StaticResource TileButton}" Click="GearBtn_Click">⚙️</Button>
            </StackPanel>
            <Border BorderBrush="White" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid x:Name="paletteGrid"  Width="256" Height="128">

                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
