<UserControl x:Class="TeheManX_Editor.Forms.DataEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="400">
    <Grid Background="#101010">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Button Click="RemoveButton_Click" Width="30" HorizontalAlignment="Left">&#10005;</Button>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="18" Foreground="White" Text="Slots:" Margin="0,0,10,0"/>
        <local:NumInt x:Name="slotCountInt" Grid.Column="2" FontSize="18" Minimum="0" Maximum="#FF" ValueChanged="slotCountInt_ValueChanged"></local:NumInt>
    </Grid>
</UserControl>
