<Window x:Class="TeheManX_Editor.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:forms="clr-namespace:TeheManX_Editor.Forms"
        mc:Ignorable="d"
        Title="TeheMan X Editor" Width="1205" Height="930" MinHeight="600" MinWidth="465" Closing="Window_Closing" PreviewKeyDown="Window_PreviewKeyDown" PreviewMouseDown="Window_PreviewMouseDown" Loaded="Window_Loaded">
    <Grid Name="grid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Name="dockBar" Style="{StaticResource toolBar}">
            <Button Name="openBtn" Style="{StaticResource ToolButton}" Click="openBtn_Click">Open</Button>
            <Button Name="saveBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="saveBtn_Click">Save</Button>
            <Button Name="saveAsBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="saveAsBtn_Click">Save as</Button>
            <Button Name="toolsBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="toolsBtn_Click">Tools</Button>
            <Button Name="aboutBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="aboutBtn_Click">About</Button>
            <Button Name="testBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="testBtn_Click">Test</Button>
            <Button Name="settingsBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="settingsBtn_Click">Settings</Button>
            <Button Name="stagesBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="stagesBtn_Click">Stages</Button>
            <Button Name="helpBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="helpBtn_Click">Help</Button>
            <Button Name="undoBtn" Style="{StaticResource ToolButton}" HorizontalAlignment="Left" Click="undoBtn_Click">Undo</Button>
        </DockPanel>

        <dragablz:TabablzControl Grid.Row="1" Name="hub" AllowDrop="True" Visibility="Hidden" ConsolidateOrphanedItems="True" Background="Black">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>

            <TabItem Name="layoutTab" IsSelected="True">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Layout</Button>
                </TabItem.Header>
                <forms:LayoutEditor x:Name="layoutE"/>
            </TabItem>
            <TabItem Name="screenTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Screen</Button>
                </TabItem.Header>
                <forms:ScreenEditor x:Name="screenE"/>
            </TabItem>
            <TabItem Name="tile32Tab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">32x32</Button>
                </TabItem.Header>
                <forms:Tile32Editor x:Name="tile32E"/>
            </TabItem>
            <TabItem Name="tile16Tab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">16x16</Button>
                </TabItem.Header>
                <forms:Tile16Editor x:Name="tile16E"/>
            </TabItem>
            <TabItem Name="paletteTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Palette</Button>
                </TabItem.Header>
                <forms:PaletteEditor x:Name="paletteE"/>
            </TabItem>
            <TabItem Name="enemyTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Enemy</Button>
                </TabItem.Header>
                <forms:EnemyEditor x:Name="enemyE"/>
            </TabItem>
            <TabItem Name="spawnTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Spawn</Button>
                </TabItem.Header>
                <forms:SpawnWindow x:Name="spawnE"/>
            </TabItem>
            <TabItem Name="camTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">Camera</Button>
                </TabItem.Header>
                <forms:CameraEditor x:Name="camE"/>
            </TabItem>
            <TabItem Name="tileTab">
                <TabItem.Header>
                    <Button Style="{StaticResource TabButton}">VRAM Tiles</Button>
                </TabItem.Header>
                <forms:TileEditor x:Name="tileE"/>
            </TabItem>
        </dragablz:TabablzControl>
    </Grid>
</Window>
