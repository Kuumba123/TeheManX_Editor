<UserControl x:Class="TeheManX_Editor.Forms.EnemyEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:forms="clr-namespace:TeheManX_Editor.Forms"
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="375"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Layout Viewer-->
        <Viewbox Grid.ColumnSpan="2" HorizontalAlignment="Left" x:Name="viewBox" VerticalAlignment="Top">
            <Canvas x:Name="canvas" Width="768" Height="512" ClipToBounds="True" PreviewMouseMove="canvas_PreviewMouseMove" PreviewMouseUp="canvas_PreviewMouseUp">
                <Image x:Name="layoutImage" PreviewMouseDown="LayoutImage_PreviewMouseDown" PreviewMouseMove="LayoutImage_PreviewMouseMove" PreviewMouseUp="LayoutImage_PreviewMouseUp" MouseLeave="LayoutImage_MouseLeave" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Canvas>
        </Viewbox>
        <TextBlock x:Name="camLbl" Grid.Row="0" IsHitTestVisible="False" Foreground="White" FontFamily="Consolas" Margin="5,0,0,0" HorizontalAlignment="Left" FontSize="20"></TextBlock>

        <Grid Focusable="False" Grid.Column="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!--Enemy Type-->
            <StackPanel Orientation="Horizontal">
                <!--...-->
            </StackPanel>
            <!--Selection-->
            <ScrollViewer x:Name="bar" Focusable="True" Background="Black" Grid.Row="1" Width="375" HorizontalAlignment="Right">
                
            </ScrollViewer>
            <!--Enemy Info-->
            <Grid Grid.Column="1" Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <!--ID-->
                        <TextBlock Width="70" FontSize="18" Foreground="White" FontFamily="Consolas">ID:</TextBlock>
                        <local:NumInt x:Name="idInt" Width="60" ButtonSpinnerWidth="20" FontSize="20" Value="0" Maximum="#FF" Minimum="0" MaxLength="3" ValueChanged="idInt_ValueChanged" IsUndoEnabled="False" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Var-->
                        <TextBlock Width="70" FontSize="18" Foreground="White" FontFamily="Consolas">Var:</TextBlock>
                        <local:NumInt x:Name="varInt" Width="60" ButtonSpinnerWidth="20" FontSize="22" Value="0" Maximum="#FF" Minimum="0" MaxLength="3" IsEnabled="False" ValueChanged="varInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Type-->
                        <TextBlock Width="70" FontSize="18" Foreground="White" FontFamily="Consolas">Type:</TextBlock>
                        <local:NumInt x:Name="typeInt" Width="60" ButtonSpinnerWidth="20" FontSize="22" Value="0" Maximum="#5" Minimum="0" MaxLength="3" IsEnabled="False" ValueChanged="typeInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--Column-->
                        <TextBlock Width="70" FontSize="18" Foreground="White" FontFamily="Consolas">Column:</TextBlock>
                        <local:NumInt x:Name="columnInt" Width="60" ButtonSpinnerWidth="20" FontSize="22" Value="0" Maximum="#100" Minimum="0" MaxLength="3" IsEnabled="False" ValueChanged="colInt_ValueChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                    <!--X-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="33" Foreground="White" FontFamily="Consolas" Padding="3,3,0,3">X:</TextBlock>
                        <local:NumInt x:Name="xInt" ButtonSpinnerWidth="20" Width="100" Height="40" FontSize="33" Value="0" Maximum="#1FFF" Minimum="0" MaxLength="3" IsEnabled="False" ValueChanged="xInt_ValueChanged"/>
                    </StackPanel>
                    <!--Y-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="33" Foreground="White" FontFamily="Consolas" Padding="3,3,0,3">Y:</TextBlock>
                        <local:NumInt x:Name="yInt" ButtonSpinnerWidth="20" Width="100" Height="40" FontSize="33" Value="0" Maximum="#1FFF" Minimum="0" MaxLength="3" IsEnabled="False" ValueChanged="yInt_ValueChanged"/>
                    </StackPanel>
                </StackPanel>
                <WrapPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2">
                    <Button Margin="5,30,5,5" Width="70" Height="35" Click="AddEnemy_Click">Add</Button>
                    <Button Margin="5,30,5,5" Width="80" Height="35" Click="RemoveEnemy_Click">Remove</Button>
                    <Button Margin="5,30,5,5" Width="70" Height="35" Click="ToolsBtn_Click" HorizontalAlignment="Left">Tools</Button>
                    <Button Margin="5,30,5,5" Width="30" Height="30" Padding="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Help_Click">?</Button>
                </WrapPanel>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
