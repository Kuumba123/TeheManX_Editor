<UserControl x:Class="TeheManX_Editor.Forms.CameraEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheManX_Editor.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="local:NumInt">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="AllowTextInput" Value="True"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="ParsingNumberStyle" Value="HexNumber"/>
            <Setter Property="FormatString" Value="X"/>
            <Setter Property="AutoSelectBehavior" Value="Never"/>
            <Setter Property="Value" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Trigger Settings-->
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" FontSize="16" FontFamily="Consolas" Padding="3,5,1,5">Trigger Settings</TextBlock>
            <Border BorderBrush="White" BorderThickness="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="26" Width="167">Setting:</TextBlock>
                        <local:NumInt x:Name="triggerInt" ValueChanged="triggerInt_ValueChanged" Minimum="0" FontSize="28" Width="95" ButtonSpinnerWidth="25"></local:NumInt>
                    </StackPanel>
                    <Border BorderBrush="White" BorderThickness="1,1,1,1">
                        <TextBlock HorizontalAlignment="Center" FontSize="16" FontFamily="Consolas" Padding="3,5,1,5">Border Ids</TextBlock>
                    </Border>
                    <Border BorderThickness="0,0,0,1" BorderBrush="White">
                        <StackPanel x:Name="borderPannel">
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="23" Width="167">Right Side:</TextBlock>
                        <local:NumInt x:Name="rightInt" ValueChanged="SideInt_ValueChanged" Uid="0" FontSize="28" Width="95" ButtonSpinnerWidth="25" Minimum="0" Maximum="#FFFF"></local:NumInt>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="23" Width="167">Left Side:</TextBlock>
                        <local:NumInt x:Name="leftInt" ValueChanged="SideInt_ValueChanged" Uid="2" FontSize="28" Width="95" ButtonSpinnerWidth="25" Minimum="0" Maximum="#FFFF"></local:NumInt>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="23" Width="167">Bottom Side:</TextBlock>
                        <local:NumInt x:Name="bottomInt" ValueChanged="SideInt_ValueChanged" Uid="4" FontSize="28" Width="95" ButtonSpinnerWidth="25" Minimum="0" Maximum="#FFFF"></local:NumInt>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="24" Width="167">Top Side:</TextBlock>
                        <local:NumInt x:Name="topInt" ValueChanged="SideInt_ValueChanged" Uid="6" FontSize="28" Width="95" ButtonSpinnerWidth="25" Minimum="0" Maximum="#FFFF"></local:NumInt>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!--Border Settings-->
        <StackPanel Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" FontSize="16" FontFamily="Consolas" Padding="3,5,1,5">Border Settings</TextBlock>
            <Border BorderBrush="White" BorderThickness="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="26" Width="167">Setting:</TextBlock>
                        <local:NumInt x:Name="borderSettingInt" ValueChanged="borderSettingInt_ValueChanged" Minimum="0" Maximum="73" FontSize="28" Width="95" ButtonSpinnerWidth="25"></local:NumInt>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="26" Width="167">New Value:</TextBlock>
                        <local:NumInt x:Name="valueInt" ValueChanged="valueInt_ValueChanged" FontSize="28" Width="95" ButtonSpinnerWidth="25"></local:NumInt>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border BorderBrush="White" BorderThickness="1,0,1,1">
                <TextBlock HorizontalAlignment="Center" FontSize="16" FontFamily="Consolas" Padding="3,5,1,5">Property</TextBlock>
            </Border>

            <Border BorderBrush="White" BorderThickness="1">
                <StackPanel>
                    <RadioButton Foreground="White" x:Name="leftBtn" FontSize="16" Uid="0" Click="RadioBtn_Click">Left Border Change</RadioButton>
                    <RadioButton Foreground="White" x:Name="rightBtn" FontSize="16" Uid="1" Click="RadioBtn_Click">Right Border Change</RadioButton>
                    <RadioButton Foreground="White" x:Name="topBtn" FontSize="16" Uid="2" Click="RadioBtn_Click">Top Border Change</RadioButton>
                    <RadioButton Foreground="White" x:Name="bottomBtn" FontSize="16" Uid="3" Click="RadioBtn_Click">Bottom Border Change</RadioButton>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal">
                <CheckBox Foreground="White" x:Name="triggerCheck" FontSize="18" VerticalContentAlignment="Center">Trigger Select</CheckBox>
                <Button Width="25" Height="25" Padding="0" Margin="8,1,0,0" VerticalContentAlignment="Top" VerticalAlignment="Top" Click="UpdateTrigger_Click">🔄</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
